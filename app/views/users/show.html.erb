<% provide(:title, @user.name) %>

<h1>プロフィール</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-hover">
      <tbody>
        <tr>
          <th class="active col-md-3">ID</th>
          <td><%= @user.id %></td>
          <th class="active col-md-3">名前</th>
          <td><%= @user.name %></td>
          <th class="active col-md-3">メールアドレス</th>
          <td><%= @user.email %></td>
          <th class="active col-md-3">作成日</th>
          <td><%= @user.created_at %></td>
        </tr>
      </tbody>


    </table>
  </div>    
</div>
