
<h1>利用者一覧</h1>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <table class="table-condensed table-hover" id="table-user">
      <%=will_paginate %>  
        <thead>
          <tr>
            <th>名前</th>
          </tr>
        </thead>
        <tbody>
         <% @users.each do |user| %>
          <tr>
            <td>
              <%=link_to user.name, user %>
               <% if current_user?(user) %>
                <span class="label label-primary label-user-divison">管理者</span>
               <% end%>
               <% if !current_user?(user) %>
                <span class="label label-success label-user-divison">一般</span>
               <% end %>
            </td>
            <td>
              <%=link_to "削除", user, method: :delete , data:{confirm:"#{user.name}を削除します。よろしいですか？"} ,class:"btn btn-sm btn-danger pull-right" %>
            </td>
          </tr>
         <% end %> 
        </tbody>
      </table>  
     <%=will_paginate %>
    </div>
  </div>  
    
    
    