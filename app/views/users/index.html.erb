
<h1>利用者一覧</h1>
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
     <%=will_paginate%>
      <table class="tabele-condensed table-hover" id="tabele-users">
        <thead>
          <tr>
            <th>名前</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
           <tr>
            <td>
              <%=link_to user.name ,user %>
               <% if current_user?(user) %>
                <span class="label label-primary label-user-division">管理者</span>
               <% end %>
               <% if !current_user?(user) %>
                <span class="label label-success label-user-division">一般</span>
               <% end %>
            </td>
            <td>
              <% if !current_user?(user) %>
               <%=link_to "削除" , user, method: :delete ,data:{confirm: "削除してもよろしいですか"} ,class:"btn btn-danger"%>
              <% end %>
            </td>
           </tr>
          <% end %>
        </tbody>
      </table>
     <%=will_paginate %>
      
    </div>
  </div>